@model IEnumerable<Producto>;

<h1 style="text-align: center;">Productos</h1>

<a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="AgregarProducto">Agregar Producto</a>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Marca</th>
            <th scope="col">Precio</th>
            <th scope="col">Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productos in Model)
        {
            <tr>
                <td>@productos.productoId</td>
                <td>@productos.nombreProducto</td>
                <td>@productos.marca</td>
                <td>Q .@productos.precio</td>
                <td>@productos.cantidad</td>
                <td>
                    <a href="Producto/ProductoSee/@productos.productoId"><img src="../../view.png" alt="Ver"></a>
                    <a type="submit"><img src="../../edit.png" alt="Editar"></a>
                    <a type="submit"><img src="../../delete.png" alt="Eliminar"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
